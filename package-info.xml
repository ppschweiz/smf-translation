<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>LukyLuke:PPSTranslate</id>
	<name>Translations-Module from PirateParty Switzerland</name>
	<version>0.0.1</version>
	<type>modification</type>

	<install>
		<readme>readme.txt</readme>
		<modification>ppstranslate_modification.xml</modification>
		<code>ppstranslate_add_settings.php</code>
		<require-file name="PPSTranslate.php" destination="$sourcedir" />
	</install>

	<uninstall>
		<modification reverse="true">ppstranslate_modification.xml</modification>
		<remove-file name="$sourcedir/PPSTranslate.php" />
	</uninstall>
</package-info>
